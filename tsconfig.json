{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@/images/*": ["src/assets/images/*"],
      "@/components/*": ["src/components/*"],
      "@/*": ["src/*"],
      "~/*": ["src/*"]
    }
  }
}
