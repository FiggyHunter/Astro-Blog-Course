---
import Link from "./Link.astro";

const base = import.meta.env.BASE_URL.slice(0, -1);
const { prevUrl, nextUrl } = Astro.props;
---

<nav aria-label="Blog pages">
  {
    prevUrl && (
      <Link
        text="Previous"
        href={base + prevUrl}
        style="primary"
        borderVisible={true}
        isFilled={false}
        icon={{ name: "tabler:arrow-big-left-line", side: "left" }}
      />
    )
  }

  {
    nextUrl && (
      <Link
        text="Next"
        href={base + nextUrl}
        style="primary"
        borderVisible={true}
        isFilled={false}
        icon={{ name: "tabler:arrow-big-right-line", side: "right" }}
      />
    )
  }
</nav>
