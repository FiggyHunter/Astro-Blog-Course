---
// component imports
import MainLayout from "@/layouts/MainLayout.astro";
import PostCard from "@/components/PostCard.astro";
import Pagination from "@/components/Pagination.astro";

import { formatBlogPosts } from "@/js/utils";
import CategoryCloud from "@/components/CategoryCloud.astro";

export async function getStaticPaths({ paginate }) {
  const allPosts = await Astro.glob("./*.md"); // change to mdx, if it messes with your new learning
  const formattedPosts = formatBlogPosts(allPosts);

  return paginate(formattedPosts, { pageSize: 3 }); // ovaj return vraÄ‡a page u Astro.
}

const { page } = Astro.props;
---

<MainLayout title="My Blog">
  <section class="container" aria-label="New Blog Posts">
    <h1 class="h1">New Blog Posts</h1>
    <div class="post-container">
      {
        page.data.map(({ frontmatter, url }) => (
          <PostCard {frontmatter} {url}>
            {" "}
          </PostCard>
        ))
      }
      <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
    </div>
  </section>

  <aside class="container" aria-label="Blog Categories">
    <h2 class="h3">Blog Categories</h2>
    <CategoryCloud showCount={true} />
  </aside>
</MainLayout>
